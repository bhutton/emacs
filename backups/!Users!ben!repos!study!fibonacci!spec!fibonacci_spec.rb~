require 'rspec'
require './fibonacci'

describe 'Fibonacci' do
  before do
    @response = Fibonacci.new
  end

  context 'when condition' do
    it 'succeeds' do      expect(@response.calculate(0)).to eq([0])
      expect(@response.calculate(1)).to eq([0, 1])
      expect(@response.calculate(2)).to eq([0, 1, 1])
      expect(@response.calculate(3)).to eq([0, 1, 1, 2])
      expect(@response.calculate(4)).to eq([0, 1, 1, 2, 3])
      expect(@response.calculate(5)).to eq([0, 1, 1, 2, 3, 5])
      expect(@response.calculate(6)).to eq([0, 1, 1, 2, 3, 5, 8])
      expect(@response.calculate(7)).to eq([0, 1, 1, 2, 3, 5, 8, 13])
    end
  end
end
