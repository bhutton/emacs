class Fibonacci
  def next_sequence fibonacci, i
    fibonacci[i-1] + fibonacci[i-2]
  end

  def calculate_fibonacci number
    fibonacci = [0, 1]

    2.upto(number) do |i|
      fibonacci.push(next_sequence(fibonacci, i))
    end

    fibonacci
  end

  def calculate number
    return [0] if number.zero?

    calculate_fibonacci number
  end
end
