require 'rspec'
require './factorial'

describe 'Factorial' do
  before do
    @factorial = Factorial.new
  end

  context 'when calculating factorial' do
    it 'succeeds' do
      expect(@factorial.calculate(0)).to eq(1)
      expect(@factorial.calculate(1)).to eq(1)
      expect(@factorial.calculate(2)).to eq(2)
      expect(@factorial.calculate(3)).to eq(6)
      expect(@factorial.calculate(4)).to eq(24)
      expect(@factorial.calculate(5)).to eq(120)
      expect(@factorial.calculate(6)).to eq(720)
    end
  end
end
